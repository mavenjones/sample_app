<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f %>
  
  <div class="field">
    <%= f.check_box :email_notifications %> Recieve email notifications?
  </div>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" TARGET="_blank">change</a>
</div>